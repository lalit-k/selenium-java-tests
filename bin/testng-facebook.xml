<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Facebook UI Selenium WebDriver Tests" verbose="10">

    <!--Browser to run tests: htmlunit / firefox / ie / chrome -->
    <parameter name="browser" value="chrome"/>

    <!-- Facebook login username and password-->
    <parameter name="facebook_user_name" value=""/>
    <parameter name="facebook_user_password" value=""/>

    <test name="Login/Logout" verbose="10">
        <classes>
            <class name="com.blogspot.automatethebox.application.facebook.test_scripts.UpdateFacebookStatusTest"/>
        </classes>
    </test>
</suite>